<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="domain">

	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM
		domain
	</select>

	<sql id="search">
		SELECT * FROM domain 
		
		<where>
			<if test="search == 1">
			</if>
			
	
		</where>
	
	</sql>

	<select id="list" resultType="Domain">
		SELECT * FROM
			domain
		LIMIT #{offset},#{perPage} 
	</select>
	
	<insert id="add">
		INSERT INTO domain (name) VALUES (#{name})
	</insert>
	
	<update id="update">
		UPDATE domain
		SET name=#{name}
		WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM domain
		WHERE id=#{id}	
	</delete>
	
	<select id="item" resultType="Domain">
		SELECT * FROM domain
		WHERE id=#{id}
	</select>
	
</mapper>